---
import ContactSection from "../components/ContactSection.astro";
import Footer from "../components/Footer.astro";
import App from "../layouts/App.astro";
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />

    <!-- SEO Meta Tags -->
    <title>
      De Toekomst van Gen-Z Recruitment: Visuele Vacatures die Werken | Nutzy
      Blog
    </title>
    <meta
      name="description"
      content="Ontdek waarom traditionele vacatures Gen-Z niet meer bereiken en hoe visuele recruitment de toekomst is. Praktische tips en inzichten voor moderne werkgevers."
    />
    <meta
      name="keywords"
      content="gen-z recruitment, visuele vacatures, recruitment trends, employer branding, nutzy blog, recruitment innovatie"
    />

    <!-- Open Graph Meta Tags -->
    <meta
      property="og:title"
      content="Contact Nutzy - Neem Contact Op | Gen-Z Recruitment Platform"
    />
    <meta
      property="og:description"
      content="Neem contact op met Nutzy voor vragen over ons Gen-Z recruitment platform. We helpen je graag met visuele vacatures en creator partnerships."
    />
    <meta property="og:type" content="website" />
    <meta property="og:url" content="https://nutzy.nl/contact" />
    <meta property="og:image" content="/img/nutzy-og-contact.jpg" />
  </head>
  <body>
    <App>
      <article class="max-w-3xl mx-auto pt-24 pb-6">
        <!-- Blog Header -->
        <header class="mb-12 lg:mb-16">
          <!-- Category Badge -->
          <div class="mb-6">
            <span
              class="inline-flex items-center px-4 py-2 rounded-full text-sm font-medium bg-primary-200 text-primary-900"
            >
              Recruitment Insights
            </span>
          </div>

          <!-- Title -->
          <h1
            class="text-4xl md:text-5xl lg:text-6xl font-bold text-gray-900 mb-6 leading-tight"
          >
            De Toekomst van Gen-Z Recruitment: Visuele Vacatures die Werken
          </h1>

          <!-- Meta Information -->
          <div
            class="flex flex-col sm:flex-row sm:items-center gap-4 text-gray-600"
          >
            <!-- Author Info -->
            <div class="flex items-center gap-3">
              <div
                class="h-10 w-10 bg-primary-500 rounded-full flex items-center justify-center"
              >
                <span class="text-white font-semibold text-sm">RN</span>
              </div>
              <div>
                <p class="font-medium text-gray-900">Rowan Nutzy</p>
              </div>
            </div>

            <!-- Divider -->
            <div class="hidden sm:block w-px h-8 bg-gray-300"></div>

            <!-- Reading Time & Date -->
            <div class="flex items-center gap-4 text-sm">
              <div class="flex items-center gap-1">
                <svg
                  class="h-4 w-4 text-gray-400"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                </svg>
                <span>6 min leestijd</span>
              </div>
              <div class="flex items-center gap-1">
                <svg
                  class="h-4 w-4 text-gray-400"
                  fill="none"
                  stroke="currentColor"
                  viewBox="0 0 24 24"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"
                  ></path>
                </svg>
                <span>23 juli 2025</span>
              </div>
            </div>
          </div>
        </header>

        <div>Content section woohoo</div>

        <!-- Article Footer -->
        <footer class="mt-16 pt-8 border-t border-gray-200">
          <!-- Tags -->
          <div class="mb-8">
            <h4 class="text-sm font-semibold text-gray-900 mb-3">Tags:</h4>
            <div class="flex flex-wrap gap-2">
              <span
                class="px-3 py-1 bg-gray-100 text-gray-700 text-sm rounded-full"
                >Gen-Z Recruitment</span
              >
              <span
                class="px-3 py-1 bg-gray-100 text-gray-700 text-sm rounded-full"
                >Visuele Vacatures</span
              >
              <span
                class="px-3 py-1 bg-gray-100 text-gray-700 text-sm rounded-full"
                >Recruitment Trends</span
              >
              <span
                class="px-3 py-1 bg-gray-100 text-gray-700 text-sm rounded-full"
                >Employer Branding</span
              >
            </div>
          </div>

          <!-- Share Buttons -->
          <div class="flex items-center justify-between">
            <div>
              <h4 class="text-sm font-semibold text-gray-900 mb-3">
                Deel dit artikel:
              </h4>
              <div class="flex gap-3">
                <a
                  href="#"
                  class="p-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition-colors"
                >
                  <svg class="h-5 w-5" fill="currentColor" viewBox="0 0 24 24">
                    <path
                      d="M24 4.557c-.883.392-1.832.656-2.828.775 1.017-.609 1.798-1.574 2.165-2.724-.951.564-2.005.974-3.127 1.195-.897-.957-2.178-1.555-3.594-1.555-3.179 0-5.515 2.966-4.797 6.045-4.091-.205-7.719-2.165-10.148-5.144-1.29 2.213-.669 5.108 1.523 6.574-.806-.026-1.566-.247-2.229-.616-.054 2.281 1.581 4.415 3.949 4.89-.693.188-1.452.232-2.224.084.626 1.956 2.444 3.379 4.6 3.419-2.07 1.623-4.678 2.348-7.29 2.04 2.179 1.397 4.768 2.212 7.548 2.212 9.142 0 14.307-7.721 13.995-14.646.962-.695 1.797-1.562 2.457-2.549z"
                    ></path>
                  </svg>
                </a>
                <a
                  href="#"
                  class="p-2 bg-blue-800 text-white rounded-lg hover:bg-blue-900 transition-colors"
                >
                  <svg class="h-5 w-5" fill="currentColor" viewBox="0 0 24 24">
                    <path
                      d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"
                    ></path>
                  </svg>
                </a>
              </div>
            </div>

            <!-- Back to Blog -->
            <a
              href="/blog"
              class="inline-flex items-center gap-2 text-primary-500 hover:text-primary-600 font-medium transition-colors"
            >
              <svg
                class="h-4 w-4"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
              </svg>
              Terug naar blog
            </a>
          </div>
        </footer>
      </article>
      <div set:html={"<p>all the content coming from tinyCME</p>"} />
      <ContactSection />
      <Footer />
    </App>
  </body>
</html>
