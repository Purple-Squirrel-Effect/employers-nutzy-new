<script>
  import { gsap } from "gsap";
  import { ScrollTrigger } from "gsap/ScrollTrigger";
  import { SplitText } from "gsap/SplitText";

  gsap.registerPlugin(SplitText, ScrollTrigger);

  // Initialize pricing toggle functionality
  function initPricingToggle(): void {
    const monthlyBtn = document.querySelector(
      "[data-monthly]"
    ) as HTMLButtonElement;
    const yearlyBtn = document.querySelector(
      "[data-yearly]"
    ) as HTMLButtonElement;
    const monthlyPrices = document.querySelectorAll(".monthly-price");
    const yearlyPrices = document.querySelectorAll(".yearly-price");

    if (!monthlyBtn || !yearlyBtn) return;

    function showMonthly(): void {
      monthlyBtn.classList.add("active", "bg-purple-600", "text-white");
      yearlyBtn.classList.remove("active", "bg-purple-600", "text-white");

      monthlyPrices.forEach((el) => el.classList.remove("hidden"));
      yearlyPrices.forEach((el) => el.classList.add("hidden"));
    }

    function showYearly(): void {
      yearlyBtn.classList.add("active", "bg-purple-600", "text-white");
      monthlyBtn.classList.remove("active", "bg-purple-600", "text-white");

      monthlyPrices.forEach((el) => el.classList.add("hidden"));
      yearlyPrices.forEach((el) => el.classList.remove("hidden"));
    }

    monthlyBtn.addEventListener("click", showMonthly);
    yearlyBtn.addEventListener("click", showYearly);

    // Set initial state
    showMonthly();
  }

  // Initialize animations
  function initPricingPageAnimations(): void {
    const prefersReducedMotion = window.matchMedia(
      "(prefers-reduced-motion: reduce)"
    ).matches;
    if (prefersReducedMotion) return;

    // Animate hero title
    const heroTitle = document.querySelector(".split-hero");
    if (heroTitle) {
      const split = SplitText.create(heroTitle, { type: "words, chars" });
      gsap.fromTo(
        split.chars,
        { opacity: 0, y: 100 },
        {
          opacity: 1,
          y: 0,
          duration: 1,
          stagger: 0.05,
          delay: 0.5,
        }
      );
    }

    // Animate pricing cards
    const pricingCards = document.querySelectorAll(".pricing-card");
    pricingCards.forEach((card, index) => {
      gsap.fromTo(
        card,
        { opacity: 0, y: 50 },
        {
          opacity: 1,
          y: 0,
          duration: 0.8,
          ease: "power2.out",
          delay: index * 0.1,
          scrollTrigger: {
            trigger: card,
            start: "top 85%",
            end: "bottom 15%",
            toggleActions: "play none none reverse",
          },
        }
      );
    });
  }

  // Initialize when DOM is ready
  document.addEventListener("DOMContentLoaded", () => {
    initPricingToggle();
    initPricingPageAnimations();
  });
</script>

<style>
  .pricing-toggle-btn.active {
    background-color: var(--color-purple-600);
    color: white;
  }

  .pricing-toggle-btn:not(.active) {
    color: var(--color-purple-600);
  }

  .pricing-toggle-btn:not(.active):hover {
    background-color: var(--color-purple-50);
  }
</style>
