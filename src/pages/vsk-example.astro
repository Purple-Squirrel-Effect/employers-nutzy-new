---
import Header from "../components/Header.astro";
import App from "../layouts/App.astro";
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>VSK Design Inspiration - Clean Modern Design</title>
    <meta
      name="description"
      content="A demonstration page showcasing VSK Design principles adapted for modern web design with clean typography, generous spacing, and thoughtful layouts."
    />
  </head>
  <body>
    <App>
      <Header />

      <!-- Hero Section - VSK Inspired Clean Layout -->
      <section
        class="vsk-hero min-h-screen bg-white flex items-center justify-center px-8 lg:px-16"
      >
        <div class="max-w-6xl mx-auto w-full">
          <div
            class="grid grid-cols-1 lg:grid-cols-2 gap-16 lg:gap-24 items-center"
          >
            <!-- Text Content -->
            <div class="space-y-8">
              <div class="space-y-6">
                <h1
                  class="text-5xl lg:text-7xl font-light text-gray-900 leading-tight"
                  style="font-family: var(--font-family-cabinet-grotesk);"
                >
                  Clean Design
                  <span class="block font-medium" style="color: #412683;"
                    >Principles</span
                  >
                </h1>
                <p
                  class="text-xl lg:text-2xl text-gray-600 leading-relaxed max-w-lg"
                  style="font-family: var(--font-family-satoshi);"
                >
                  Inspired by VSK Design's approach to clean, purposeful design
                  that prioritizes clarity and user experience.
                </p>
              </div>

              <div class="flex flex-col sm:flex-row gap-4">
                <button class="vsk-button-primary"> Explore Work </button>
                <button class="vsk-button-secondary"> Learn More </button>
              </div>
            </div>

            <!-- Visual Content -->
            <div class="relative">
              <div class="vsk-card-large">
                <div
                  class="aspect-[4/3] bg-gradient-to-br from-gray-50 to-gray-100 rounded-2xl flex items-center justify-center"
                >
                  <div class="text-center space-y-4">
                    <div
                      class="w-16 h-16 mx-auto rounded-full"
                      style="background-color: #412683;"
                    >
                    </div>
                    <h3
                      class="font-cabinet-grotesk text-xl font-medium text-gray-800"
                    >
                      Visual Excellence
                    </h3>
                    <p class="font-satoshi text-gray-600">
                      Clean, purposeful design
                    </p>
                  </div>
                </div>
              </div>

              <!-- Floating accent -->
              <div
                class="absolute -top-4 -right-4 w-24 h-24 rounded-full opacity-20"
                style="background-color: #412683;"
              >
              </div>
            </div>
          </div>
        </div>
      </section>

      <!-- Principles Section -->
      <section class="vsk-principles py-24 lg:py-32 bg-gray-50">
        <div class="max-w-6xl mx-auto px-8 lg:px-16">
          <div class="text-center mb-20">
            <h2
              class="font-cabinet-grotesk text-4xl lg:text-5xl font-light text-gray-900 mb-6"
            >
              Design Principles
            </h2>
            <p class="font-satoshi text-xl text-gray-600 max-w-2xl mx-auto">
              Every element serves a purpose. Every space has meaning. Every
              choice is intentional.
            </p>
          </div>

          <div class="grid grid-cols-1 md:grid-cols-3 gap-12">
            <!-- Principle 1 -->
            <div class="vsk-principle-card">
              <div
                class="w-12 h-12 rounded-full mb-6"
                style="background-color: #412683;"
              >
              </div>
              <h3
                class="font-cabinet-grotesk text-2xl font-medium text-gray-900 mb-4"
              >
                Clarity First
              </h3>
              <p class="font-satoshi text-gray-600 leading-relaxed">
                Clear communication through thoughtful typography hierarchy and
                generous white space that guides the user's attention naturally.
              </p>
            </div>

            <!-- Principle 2 -->
            <div class="vsk-principle-card">
              <div
                class="w-12 h-12 rounded-full mb-6"
                style="background-color: #412683;"
              >
              </div>
              <h3
                class="font-cabinet-grotesk text-2xl font-medium text-gray-900 mb-4"
              >
                Purposeful Motion
              </h3>
              <p class="font-satoshi text-gray-600 leading-relaxed">
                Subtle animations that enhance the user experience without
                overwhelming, respecting accessibility preferences.
              </p>
            </div>

            <!-- Principle 3 -->
            <div class="vsk-principle-card">
              <div
                class="w-12 h-12 rounded-full mb-6"
                style="background-color: #412683;"
              >
              </div>
              <h3
                class="font-cabinet-grotesk text-2xl font-medium text-gray-900 mb-4"
              >
                Responsive Harmony
              </h3>
              <p class="font-satoshi text-gray-600 leading-relaxed">
                Seamless experiences across all devices with layouts that adapt
                intelligently to different screen sizes.
              </p>
            </div>
          </div>
        </div>
      </section>

      <!-- Typography Showcase -->
      <section class="vsk-typography py-24 lg:py-32 bg-white">
        <div class="max-w-6xl mx-auto px-8 lg:px-16">
          <div
            class="grid grid-cols-1 lg:grid-cols-2 gap-16 lg:gap-24 items-center"
          >
            <!-- Typography Examples -->
            <div class="space-y-12">
              <div>
                <h2
                  class="font-cabinet-grotesk text-4xl lg:text-5xl font-light text-gray-900 mb-8"
                >
                  Typography Matters
                </h2>

                <div class="space-y-8">
                  <div>
                    <h3
                      class="font-cabinet-grotesk text-3xl font-medium text-gray-900 mb-3"
                    >
                      Cabinet Grotesk
                    </h3>
                    <p class="font-satoshi text-gray-600">
                      Clean, modern sans-serif for headings and important text
                    </p>
                  </div>

                  <div>
                    <h3
                      class="font-satoshi text-2xl font-semibold text-gray-900 mb-3"
                    >
                      Satoshi Regular
                    </h3>
                    <p class="font-satoshi text-gray-600">
                      Geometric sans-serif perfect for body text and readable
                      content
                    </p>
                  </div>

                  <div>
                    <h3
                      class="font-plein text-2xl font-medium text-gray-900 mb-3"
                    >
                      Plein Serif
                    </h3>
                    <p class="font-satoshi text-gray-600">
                      Elegant serif for editorial content and sophisticated
                      branding
                    </p>
                  </div>
                </div>
              </div>
            </div>

            <!-- Visual Typography Demo -->
            <div class="vsk-card-large">
              <div class="p-12 space-y-8">
                <div class="text-center">
                  <div
                    class="font-cabinet-grotesk text-6xl font-light text-gray-900 mb-4"
                  >
                    Aa
                  </div>
                  <div class="font-satoshi text-lg text-gray-600">
                    Typography Scale
                  </div>
                </div>

                <div class="space-y-4">
                  <div
                    class="h-2 rounded-full"
                    style="background-color: #412683;"
                  >
                  </div>
                  <div class="h-1 bg-gray-300 rounded-full"></div>
                  <div class="h-1 bg-gray-200 rounded-full"></div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </section>

      <!-- Process Section -->
      <section class="vsk-process py-24 lg:py-32 bg-gray-50">
        <div class="max-w-6xl mx-auto px-8 lg:px-16">
          <div class="text-center mb-20">
            <h2
              class="font-cabinet-grotesk text-4xl lg:text-5xl font-light text-gray-900 mb-6"
            >
              Our Process
            </h2>
            <p class="font-satoshi text-xl text-gray-600 max-w-2xl mx-auto">
              A systematic approach to creating meaningful design solutions that
              resonate with your audience.
            </p>
          </div>

          <div class="grid grid-cols-1 md:grid-cols-4 gap-8">
            <!-- Step 1 -->
            <div class="vsk-process-step">
              <div class="vsk-process-number">01</div>
              <h3
                class="font-cabinet-grotesk text-xl font-medium text-gray-900 mb-3"
              >
                Discover
              </h3>
              <p class="font-satoshi text-gray-600 text-sm leading-relaxed">
                Understanding your brand, goals, and target audience through
                research and collaboration.
              </p>
            </div>

            <!-- Step 2 -->
            <div class="vsk-process-step">
              <div class="vsk-process-number">02</div>
              <h3
                class="font-cabinet-grotesk text-xl font-medium text-gray-900 mb-3"
              >
                Define
              </h3>
              <p class="font-satoshi text-gray-600 text-sm leading-relaxed">
                Establishing clear objectives, design principles, and strategic
                direction for the project.
              </p>
            </div>

            <!-- Step 3 -->
            <div class="vsk-process-step">
              <div class="vsk-process-number">03</div>
              <h3
                class="font-cabinet-grotesk text-xl font-medium text-gray-900 mb-3"
              >
                Design
              </h3>
              <p class="font-satoshi text-gray-600 text-sm leading-relaxed">
                Creating thoughtful solutions that balance aesthetics with
                functionality and user needs.
              </p>
            </div>

            <!-- Step 4 -->
            <div class="vsk-process-step">
              <div class="vsk-process-number">04</div>
              <h3
                class="font-cabinet-grotesk text-xl font-medium text-gray-900 mb-3"
              >
                Deliver
              </h3>
              <p class="font-satoshi text-gray-600 text-sm leading-relaxed">
                Implementing the final design with attention to detail and
                ongoing support.
              </p>
            </div>
          </div>
        </div>
      </section>

      <!-- Featured Work Section -->
      <section class="vsk-work py-24 lg:py-32 bg-white">
        <div class="max-w-6xl mx-auto px-8 lg:px-16">
          <div class="text-center mb-20">
            <h2
              class="font-cabinet-grotesk text-4xl lg:text-5xl font-light text-gray-900 mb-6"
            >
              Featured Work
            </h2>
            <p class="font-satoshi text-xl text-gray-600 max-w-2xl mx-auto">
              A selection of projects that demonstrate our commitment to clean,
              purposeful design.
            </p>
          </div>

          <div class="grid grid-cols-1 lg:grid-cols-2 gap-12">
            <!-- Project 1 -->
            <div class="vsk-work-item">
              <div class="vsk-work-image">
                <div
                  class="aspect-[4/3] bg-gradient-to-br from-gray-100 to-gray-200 rounded-2xl flex items-center justify-center"
                >
                  <div class="text-center space-y-3">
                    <div
                      class="w-12 h-12 mx-auto rounded-lg"
                      style="background-color: #412683;"
                    >
                    </div>
                    <h4
                      class="font-cabinet-grotesk text-lg font-medium text-gray-800"
                    >
                      Brand Identity
                    </h4>
                  </div>
                </div>
              </div>
              <div class="mt-6">
                <h3
                  class="font-cabinet-grotesk text-2xl font-medium text-gray-900 mb-3"
                >
                  Modern Tech Startup
                </h3>
                <p class="font-satoshi text-gray-600 mb-4">
                  Complete brand identity and digital presence for an innovative
                  technology company.
                </p>
                <button
                  class="font-satoshi text-sm font-medium hover:underline"
                  style="color: #412683;"
                >
                  View Case Study →
                </button>
              </div>
            </div>

            <!-- Project 2 -->
            <div class="vsk-work-item">
              <div class="vsk-work-image">
                <div
                  class="aspect-[4/3] bg-gradient-to-br from-gray-100 to-gray-200 rounded-2xl flex items-center justify-center"
                >
                  <div class="text-center space-y-3">
                    <div
                      class="w-12 h-12 mx-auto rounded-lg"
                      style="background-color: #412683;"
                    >
                    </div>
                    <h4
                      class="font-cabinet-grotesk text-lg font-medium text-gray-800"
                    >
                      Web Design
                    </h4>
                  </div>
                </div>
              </div>
              <div class="mt-6">
                <h3
                  class="font-cabinet-grotesk text-2xl font-medium text-gray-900 mb-3"
                >
                  E-commerce Platform
                </h3>
                <p class="font-satoshi text-gray-600 mb-4">
                  User-centered design for a premium e-commerce experience with
                  focus on conversion.
                </p>
                <button
                  class="font-satoshi text-sm font-medium hover:underline"
                  style="color: #412683;"
                >
                  View Case Study →
                </button>
              </div>
            </div>
          </div>
        </div>
      </section>

      <!-- Contact Section -->
      <section
        class="vsk-contact py-24 lg:py-32"
        style="background-color: #412683;"
      >
        <div class="max-w-4xl mx-auto px-8 lg:px-16 text-center">
          <h2
            class="font-cabinet-grotesk text-4xl lg:text-5xl font-light text-white mb-8"
          >
            Let's Create Something Beautiful
          </h2>
          <p
            class="font-satoshi text-xl text-purple-100 mb-12 max-w-2xl mx-auto"
          >
            Ready to bring clean, purposeful design to your next project? Let's
            discuss how we can work together.
          </p>

          <div class="flex flex-col sm:flex-row gap-6 justify-center">
            <button class="vsk-button-white"> Start a Project </button>
            <button class="vsk-button-outline-white"> View Portfolio </button>
          </div>
        </div>
      </section>
    </App>
  </body>
</html>

<script>
  import { gsap } from "gsap";
  import { ScrollTrigger } from "gsap/ScrollTrigger";

  gsap.registerPlugin(ScrollTrigger);

  // Initialize animations when DOM is ready
  document.addEventListener("DOMContentLoaded", () => {
    // Check for reduced motion preference
    const prefersReducedMotion = window.matchMedia(
      "(prefers-reduced-motion: reduce)"
    ).matches;

    if (prefersReducedMotion) return;

    // Hero section animations
    const heroTimeline = gsap.timeline();

    heroTimeline
      .fromTo(
        ".vsk-hero h1",
        { opacity: 0, y: 60 },
        { opacity: 1, y: 0, duration: 1, ease: "power2.out" }
      )
      .fromTo(
        ".vsk-hero p",
        { opacity: 0, y: 40 },
        { opacity: 1, y: 0, duration: 0.8, ease: "power2.out" },
        "-=0.5"
      )
      .fromTo(
        ".vsk-hero .vsk-button-primary, .vsk-hero .vsk-button-secondary",
        { opacity: 0, y: 30 },
        { opacity: 1, y: 0, duration: 0.6, ease: "power2.out", stagger: 0.1 },
        "-=0.3"
      )
      .fromTo(
        ".vsk-hero .vsk-card-large",
        { opacity: 0, scale: 0.9 },
        { opacity: 1, scale: 1, duration: 0.8, ease: "power2.out" },
        "-=0.6"
      );

    // Principles section scroll animations
    gsap.fromTo(
      ".vsk-principle-card",
      { opacity: 0, y: 50 },
      {
        opacity: 1,
        y: 0,
        duration: 0.8,
        ease: "power2.out",
        stagger: 0.2,
        scrollTrigger: {
          trigger: ".vsk-principles",
          start: "top 80%",
          end: "bottom 20%",
          toggleActions: "play none none reverse",
        },
      }
    );

    // Typography section animations
    gsap.fromTo(
      ".vsk-typography .space-y-12",
      { opacity: 0, x: -50 },
      {
        opacity: 1,
        x: 0,
        duration: 0.8,
        ease: "power2.out",
        scrollTrigger: {
          trigger: ".vsk-typography",
          start: "top 80%",
          end: "bottom 20%",
          toggleActions: "play none none reverse",
        },
      }
    );

    gsap.fromTo(
      ".vsk-typography .vsk-card-large",
      { opacity: 0, x: 50 },
      {
        opacity: 1,
        x: 0,
        duration: 0.8,
        ease: "power2.out",
        delay: 0.2,
        scrollTrigger: {
          trigger: ".vsk-typography",
          start: "top 80%",
          end: "bottom 20%",
          toggleActions: "play none none reverse",
        },
      }
    );

    // Process section animations
    gsap.fromTo(
      ".vsk-process-step",
      { opacity: 0, y: 50 },
      {
        opacity: 1,
        y: 0,
        duration: 0.8,
        ease: "power2.out",
        stagger: 0.15,
        scrollTrigger: {
          trigger: ".vsk-process",
          start: "top 80%",
          end: "bottom 20%",
          toggleActions: "play none none reverse",
        },
      }
    );

    // Work section animations
    gsap.fromTo(
      ".vsk-work-item",
      { opacity: 0, y: 60 },
      {
        opacity: 1,
        y: 0,
        duration: 0.8,
        ease: "power2.out",
        stagger: 0.2,
        scrollTrigger: {
          trigger: ".vsk-work",
          start: "top 80%",
          end: "bottom 20%",
          toggleActions: "play none none reverse",
        },
      }
    );

    // Contact section animations
    gsap.fromTo(
      ".vsk-contact h2, .vsk-contact p",
      { opacity: 0, y: 40 },
      {
        opacity: 1,
        y: 0,
        duration: 0.8,
        ease: "power2.out",
        stagger: 0.2,
        scrollTrigger: {
          trigger: ".vsk-contact",
          start: "top 80%",
          end: "bottom 20%",
          toggleActions: "play none none reverse",
        },
      }
    );

    gsap.fromTo(
      ".vsk-contact .vsk-button-white, .vsk-contact .vsk-button-outline-white",
      { opacity: 0, y: 30 },
      {
        opacity: 1,
        y: 0,
        duration: 0.6,
        ease: "power2.out",
        stagger: 0.1,
        delay: 0.4,
        scrollTrigger: {
          trigger: ".vsk-contact",
          start: "top 80%",
          end: "bottom 20%",
          toggleActions: "play none none reverse",
        },
      }
    );

    // Floating accent animation
    gsap.to(".vsk-hero .absolute.w-24", {
      rotation: 360,
      duration: 20,
      ease: "none",
      repeat: -1,
    });

    // Button hover enhancements
    const buttons = document.querySelectorAll('[class*="vsk-button"]');
    buttons.forEach((button) => {
      button.addEventListener("mouseenter", () => {
        if (!prefersReducedMotion) {
          gsap.to(button, { scale: 1.05, duration: 0.2, ease: "power2.out" });
        }
      });

      button.addEventListener("mouseleave", () => {
        if (!prefersReducedMotion) {
          gsap.to(button, { scale: 1, duration: 0.2, ease: "power2.out" });
        }
      });
    });
  });
</script>

<style>
  /* VSK-inspired button styles */
  .vsk-button-primary {
    font-family: var(--font-family-satoshi);
    padding: 1rem 2rem;
    font-size: 1.125rem;
    font-weight: 500;
    color: white;
    background-color: #412683;
    border-radius: 1rem;
    border: none;
    cursor: pointer;
    transition: all 0.3s ease;
    box-shadow: 0 10px 25px rgba(65, 38, 131, 0.2);
    outline: none;
  }

  .vsk-button-primary:hover {
    transform: scale(1.05);
    box-shadow: 0 15px 35px rgba(65, 38, 131, 0.3);
  }

  .vsk-button-primary:focus {
    outline: 4px solid rgba(65, 38, 131, 0.5);
    outline-offset: 2px;
  }

  .vsk-button-secondary {
    font-family: var(--font-family-satoshi);
    padding: 1rem 2rem;
    font-size: 1.125rem;
    font-weight: 500;
    color: #111827;
    background-color: white;
    border: 2px solid #412683;
    border-radius: 1rem;
    cursor: pointer;
    transition: all 0.3s ease;
    outline: none;
  }

  .vsk-button-secondary:hover {
    transform: scale(1.05);
  }

  .vsk-button-secondary:focus {
    outline: 4px solid rgba(156, 163, 175, 0.5);
    outline-offset: 2px;
  }

  .vsk-button-white {
    font-family: var(--font-family-satoshi);
    padding: 1rem 2rem;
    font-size: 1.125rem;
    font-weight: 500;
    color: #111827;
    background-color: white;
    border: none;
    border-radius: 1rem;
    cursor: pointer;
    transition: all 0.3s ease;
    box-shadow: 0 10px 25px rgba(0, 0, 0, 0.1);
    outline: none;
  }

  .vsk-button-white:hover {
    transform: scale(1.05);
  }

  .vsk-button-white:focus {
    outline: 4px solid rgba(255, 255, 255, 0.3);
    outline-offset: 2px;
  }

  .vsk-button-outline-white {
    font-family: var(--font-family-satoshi);
    padding: 1rem 2rem;
    font-size: 1.125rem;
    font-weight: 500;
    color: white;
    background-color: transparent;
    border: 2px solid white;
    border-radius: 1rem;
    cursor: pointer;
    transition: all 0.3s ease;
    outline: none;
  }

  .vsk-button-outline-white:hover {
    background-color: white;
    color: #111827;
  }

  .vsk-button-outline-white:focus {
    outline: 4px solid rgba(255, 255, 255, 0.3);
    outline-offset: 2px;
  }

  /* VSK-inspired card styles */
  .vsk-card-large {
    background-color: white;
    border-radius: 1.5rem;
    box-shadow: 0 20px 60px rgba(0, 0, 0, 0.08);
    transition: all 0.3s ease;
  }

  .vsk-card-large:hover {
    box-shadow: 0 30px 80px rgba(0, 0, 0, 0.12);
  }

  .vsk-principle-card {
    background-color: white;
    padding: 2rem;
    border-radius: 1rem;
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.05);
    transition: all 0.3s ease;
  }

  .vsk-principle-card:hover {
    box-shadow: 0 20px 50px rgba(0, 0, 0, 0.1);
    transform: translateY(-4px);
  }

  /* Process section styles */
  .vsk-process-step {
    text-align: center;
  }

  .vsk-process-number {
    font-family: var(--font-family-cabinet-grotesk);
    font-size: 2.25rem;
    font-weight: 300;
    color: #d1d5db;
    margin-bottom: 1.5rem;
  }

  /* Work section styles */
  .vsk-work-item {
    transition: all 0.3s ease;
  }

  .vsk-work-item:hover {
    transform: translateY(-8px);
  }

  .vsk-work-image {
    transition: all 0.3s ease;
  }

  .vsk-work-item:hover .vsk-work-image {
    box-shadow: 0 25px 60px rgba(0, 0, 0, 0.15);
  }

  /* Responsive adjustments */
  @media (max-width: 768px) {
    .vsk-hero {
      padding-top: 6rem;
      min-height: calc(100vh - 4rem);
    }

    .vsk-hero h1 {
      font-size: 3rem;
      line-height: 1.1;
    }

    .vsk-hero p {
      font-size: 1.125rem;
    }

    .vsk-button-primary,
    .vsk-button-secondary,
    .vsk-button-white,
    .vsk-button-outline-white {
      padding: 0.875rem 1.5rem;
      font-size: 1rem;
    }
  }

  /* Smooth scrolling */
  html {
    scroll-behavior: smooth;
  }

  /* Ensure proper spacing and typography hierarchy */
  .vsk-hero,
