---
import { getCollection } from "astro:content";
import ContactSection from "../components/ContactSection.astro";
import Footer from "../components/Footer.astro";
import HeroDescription from "../components/HeroDescription.astro";
import HeroTitle from "../components/HeroTitle.astro";
import Section from "../components/Section.astro";
import SectionTitle from "../components/SectionTitle.astro";
import SectionDescription from "../components/SectionDescription.astro";
import App from "../layouts/App.astro";

// Get all blog posts from the content collection
const allPosts = await getCollection("blog");

console.log("allPosts", allPosts);

// Sort posts by date (newest first)
const sortedPosts = allPosts.sort(
  (a, b) =>
    new Date(b.data.posted).getTime() - new Date(a.data.posted).getTime()
);

// Show first 6 posts on main blog page
const POSTS_PER_PAGE = 6;
const paginatedPosts = sortedPosts.slice(0, POSTS_PER_PAGE);
const hasMorePosts = sortedPosts.length > POSTS_PER_PAGE;

// Format date for display
function formatDate(date: Date): string {
  return date.toLocaleDateString("nl-NL", {
    year: "numeric",
    month: "long",
    day: "numeric",
  });
}

// Calculate reading time (simple word count estimation)
function calculateReadingTime(content: string): number {
  const words = content.replace(/<[^>]*>/g, "").split(/\s+/).length;
  return Math.ceil(words / 200); // 200 words per minute
}

// Get excerpt from content - prioritize description field, fallback to content
function getExcerpt(post: any, maxLength: number = 150): string {
  // First try to use the description field if it exists
  if (post.data.description && post.data.description.trim()) {
    return post.data.description.trim();
  }

  // Fallback to content excerpt
  const cleanContent = post.data.content.replace(/<[^>]*>/g, "").trim();
  return cleanContent.length > maxLength
    ? cleanContent.substring(0, maxLength) + "..."
    : cleanContent;
}
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>
      Nutzy - Gen-Z Recruitment Platform | Visuele Vacatures & Creator Network
    </title>
    <meta
      name="description"
      content="Bereik Gen-Z talent met Nutzy's visuele recruitment platform. Van visuele vacatures tot creator partnerships - transformeer jouw recruitment aanpak."
    />
  </head>
  <body>
    <App>
      <Section
        sectionClassName="bg-primary-500 "
        className="min-h-screen  mx-auto  gap-8 items-center justify-center grid grid-cols-1 lg:grid-cols-2"
      >
        <img
          class="absolute left-0 top-0 opacity-20 z-0 h-[200svh] w-[200svh]"
          src="/svg/particle/share.svg"
        />

        <div class="order-2 lg:order-1 relative z-10 rounded-full  min-h-1/2">
          <HeroTitle>
               <span class="text-shadow shadow-black">
                Kennis delen
               </span>
          </HeroTitle>
          <HeroDescription>
            Bereik de juiste doelgroep met onze strategische campagnes speciaal
            ontworpen voor het werven van Gen-Z talent. Van concept tot
            uitvoering - wij zorgen voor resultaat.
          </HeroDescription>
         
          
          <div class="mt-8 flex flex-wrap gap-4">
            <a
              href="#strategy"
              class="lg:px-8 lg:py-4 py-2 px-4 border-2 border-current font-bold rounded-lg hover:bg-black/10 transition-all duration-300"
            >
              Ontdek onze aanpak
            </a>
            <a
              href="#contact"
              class="lg:px-8 lg:py-4 py-2 px-4 bg-tertiary-500 text-black font-bold rounded-lg hover:brightness-105 transition-all duration-300"
            >
              Neem contact op
            </a>
          </div>
        </div>
      
      </Section>
      <Section
        sectionClassName=" min-h-screen bg-primary-200"
        className="relative  mx-auto py-16"
      >
        <div class="mx-auto">
          <div class="text-center mb-12">
            <div class="mb-4">
              <SectionTitle>
                <span class="text-gray-900 text-shadow shadow-white">Laatste Blog Posts</span>
              </SectionTitle>
            </div>
            <div class="max-w-2xl mx-auto">
              <SectionDescription>
                <span class="text-gray-600">
                  Ontdek de nieuwste inzichten, trends en strategieÃ«n voor moderne
                  recruitment
                </span>
              </SectionDescription>
            </div>
          </div>

          <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
            {
              paginatedPosts.map((post) => (
                <a
                  href={`/blog/${post.id}`}
                  class="block group focus:outline-none focus:ring-4 focus:ring-primary-200 focus:ring-offset-2 rounded-2xl transition-all duration-300"
                >
                  <article class="bg-white border border-gray-100 rounded-2xl shadow-lg hover:shadow-2xl hover:border-primary-200 transition-all duration-300 hover:scale-[1.02] overflow-hidden h-full flex flex-col">
                    <!-- Post Image -->
                    <div class="relative h-48 overflow-hidden">
                      <img
                        src={post.data.featured_image ? `https://employers-backend.nutzy.nl/api/files/posts/${post.id}/${post.data.featured_image}` : "/svg/Content-creator-amico.svg"}
                        alt={post.data.title}
                        class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-110"
                        loading="lazy"
                      />
                      <div class="absolute inset-0 bg-gradient-to-t from-black/40 via-transparent to-transparent"></div>
                      {post.data.category && (
                        <div class="absolute top-4 left-4">
                          <span class="inline-block px-3 py-1 bg-primary-500 text-white text-xs font-semibold rounded-full border border-primary-400">
                            {post.data.category}
                          </span>
                        </div>
                      )}
                    </div>

                    <!-- Post Content -->
                    <div class="p-6 pb-4 flex-1">
                      <!-- Category Badge -->
                      {post.data.category && (
                        <div class="mb-4">
                          <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-primary-100 text-primary-800 border border-primary-200">
                            {post.data.category}
                          </span>
                        </div>
                      )}

                      <!-- Title -->
                      <h3 class="text-xl font-bold text-gray-900 mb-3 line-clamp-2 group-hover:text-primary-700 transition-colors leading-tight">
                        {post.data.title}
                      </h3>

                      <!-- Excerpt -->
                      <div class="text-gray-600 mb-4 line-clamp-3 leading-relaxed">
                        {post.data.description ? (
                          <div set:html={post.data.description} />
                        ) : (
                          <p set:html={getExcerpt(post)} />
                        )}
                      </div>
                    </div>

                    <!-- Post Footer -->
                    <div class="px-6 pb-6 mt-auto">
                      <div class="flex items-center justify-between text-sm text-gray-500">
                        <!-- Author -->
                        <div class="flex items-center gap-3">
                          <div class="h-10 w-10 bg-gradient-to-br from-primary-500 to-primary-600 rounded-full flex items-center justify-center shadow-md">
                            <span class="text-white font-bold text-sm">
                              {post.data.author
                                .split(" ")
                                .map((name) => name[0])
                                .join("")}
                            </span>
                          </div>
                          <div class="flex flex-col">
                            <span class="font-medium text-gray-700">
                              {post.data.author}
                            </span>
                            <span class="text-xs text-gray-500">
                              {formatDate(post.data.posted)}
                            </span>
                          </div>
                        </div>

                        <!-- Reading Time -->
                        <div class="flex items-center gap-2 text-xs text-gray-500 bg-gray-50 px-3 py-1 rounded-full">
                          <svg
                            class="h-3 w-3"
                            fill="none"
                            stroke="currentColor"
                            viewBox="0 0 24 24"
                          >
                            <path
                              stroke-linecap="round"
                              stroke-linejoin="round"
                              stroke-width="2"
                              d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"
                            />
                          </svg>
                          <span>
                            {calculateReadingTime(post.data.content)} min
                          </span>
                        </div>
                      </div>
                    </div>
                  </article>
                </a>
              ))
            }
          </div>

          {
            hasMorePosts && (
              <div class="text-center mt-12">
                <a
                  href="/blog/2#blog-content"
                  class="inline-flex items-center gap-2 px-8 py-4 bg-primary-500 text-white font-bold rounded-lg hover:bg-primary-600 transition-all duration-300"
                >
                  Bekijk meer artikelen
                  <svg
                    class="h-5 w-5"
                    fill="none"
                    stroke="currentColor"
                    viewBox="0 0 24 24"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M17 8l4 4m0 0l-4 4m4-4H3"
                    />
                  </svg>
                </a>
              </div>
            )
          }
        </div>
      </Section>

     
      <ContactSection />
      <Footer />
    </App>
  </body>
</html>
