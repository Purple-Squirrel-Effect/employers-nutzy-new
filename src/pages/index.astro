  // Infinite logo scroll animation
  function initLogoScroll(): void {
    const logoTrack = document.querySelector(
      ".logo-scroll-track"
    ) as HTMLElement;
    if (!logoTrack) return;

    // Check for reduced motion preference
    const prefersReducedMotion = window.matchMedia(
      "(prefers-reduced-motion: reduce)"
    ).matches;

    if (prefersReducedMotion) {
      // If user prefers reduced motion, don't animate
      return;
    }

    // Calculate the width of half the logos (since we duplicated them)
    const logoItems = logoTrack.children;
    const halfWidth = Array.from(logoItems)
      .slice(0, logoItems.length / 2)
      .reduce((total, item) => {
        const element = item as HTMLElement;
        return total + element.offsetWidth + 64; // 64px is the gap (gap-16 = 4rem = 64px)
      }, 0);

    // Set initial position
    gsap.set(logoTrack, { x: 0 });

    // Create infinite scroll animation
    const tl = gsap.timeline({ repeat: -1 });
    tl.to(logoTrack, {
      x: -halfWidth,
      duration: 20, // Adjust speed as needed
      ease: "none",
    });

    // Pause/resume animation based on visibility and user preference
    const observer = new IntersectionObserver((entries) => {
      entries.forEach((entry) => {
        if (entry.isIntersecting) {
          tl.play();
        } else {
          tl.pause();
        }
      });
    });

    const parentElement = logoTrack.parentElement;
    if (parentElement) {
      observer.observe(parentElement);
    }

    // Listen for changes in motion preference
    const mediaQuery = window.matchMedia("(prefers-reduced-motion: reduce)");
    mediaQuery.addEventListener("change", (e) => {
      if (e.matches) {
        tl.pause();
        gsap.set(logoTrack, { x: 0 });
      } else {
        tl.play();
      }
    });
  }

  // Initialize when DOM is ready
  document.addEventListener("DOMContentLoaded", () => {
    initIntroAnimations();
    initButtonHandlers();
    initLogoScroll();
  });
</script>
