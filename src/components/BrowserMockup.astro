---
export interface Props {
  wireframeSrc: string;
  websiteTitle?: string;
  className?: string;
}

const { wireframeSrc, websiteTitle = "Website", className = "" } = Astro.props;
---

<div class={`relative w-full h-full ${className}`}>
  <!-- Browser Window -->
  <div
    class="bg-white rounded-t-lg overflow-hidden w-full h-full flex flex-col"
  >
    <!-- Single Browser Header Row -->
    <div
      class="bg-gray-100 px-2 py-1 border-b border-gray-200 flex items-center gap-2 flex-shrink-0"
    >
      <!-- Window Controls -->
      <div class="flex items-center gap-1">
        <div class="w-2 h-2 bg-red-500 rounded-full"></div>
        <div class="w-2 h-2 bg-yellow-500 rounded-full"></div>
        <div class="w-2 h-2 bg-green-500 rounded-full"></div>
      </div>

      <!-- Address Bar -->
      <div class="flex-1 bg-white rounded-full px-2 py-1 mx-2">
        <div class="text-xs text-gray-500 truncate">
          {websiteTitle.toLowerCase().replace(/\s+/g, "")}.com
        </div>
      </div>

      <!-- Menu Dots -->
      <div class="w-4 h-4 flex items-center justify-center">
        <div class="w-1 h-1 bg-gray-400 rounded-full"></div>
      </div>
    </div>

    <!-- Website Content Area -->
    <div class="bg-white flex-1 overflow-hidden">
      <img
        src={wireframeSrc}
        alt={`${websiteTitle} wireframe`}
        class="w-full h-full object-cover object-top"
        loading="lazy"
      />
    </div>
  </div>
</div>
