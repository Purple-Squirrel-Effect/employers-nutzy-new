---
// Testimonials section data structure
interface Testimonial {
  id: string;
  name: string;
  rating: number;
  review: string;
}

// Testimonials data
const testimonials: Testimonial[] = [
  {
    id: "testimonial-1",
    name: "Zeynep DoÄŸan",
    rating: 5,
    review: "Ruim aanbod van vacatures, en de website is overzichtelijk!"
  },
  {
    id: "testimonial-2", 
    name: "Sten van der Heijden",
    rating: 5,
    review: "Fijn platform waar alles wat ik belangrijk vind terug kan vinden."
  },
  {
    id: "testimonial-3",
    name: "Emma Ausems", 
    rating: 4,
    review: "Highlighten het salaris, locatie, functie-eisen en vakantiedagen. Is nice en duidelijk."
  }
];

import Section from "../Section.astro";
---

<Section
  sectionClassName="bg-primary-100"
  className="grid grid-cols-1 mx-auto relative py-16 md:py-24 lg:py-32"
>
  <!-- Content Container -->
  <div class="relative z-10 w-full mx-auto">
    <!-- Section Header -->
    <div class="text-center mb-12 lg:mb-16" data-testimonials-header>
      <h2
        class="text-3xl md:text-4xl lg:text-5xl font-bold text-primary-900 mb-4"
      >
        Ontdek wat <span class="text-secondary-500">Gen Z</span> zelf<br />
        zegt over <span class="text-primary-500">Nutzy</span>
      </h2>
    </div>

    <!-- Testimonials Grid -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 lg:gap-8">
      {testimonials.map((testimonial, index) => (
        <article
          class="bg-white rounded-2xl p-6 shadow-lg hover:shadow-xl transition-all duration-300 hover:scale-105 group flex flex-col"
          data-testimonial-card
          data-index={index}
        >
          <!-- Star Rating -->
          <div class="flex justify-start mb-4">
            {Array.from({ length: 5 }, (_, starIndex) => (
              <svg
                class={`w-5 h-5 ${
                  starIndex < testimonial.rating
                    ? "text-primary-500"
                    : "text-gray-300"
                }`}
                fill="currentColor"
                viewBox="0 0 20 20"
                xmlns="http://www.w3.org/2000/svg"
              >
                <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
              </svg>
            ))}
          </div>

          <!-- Review Text -->
          <p class="text-gray-700 text-base leading-relaxed mb-6 flex-grow">
            {testimonial.review}
          </p>

          <!-- Reviewer Name -->
          <div class="pt-4 mt-auto">
            <p class="text-primary-500 font-semibold text-sm">
              {testimonial.name}
            </p>
          </div>
        </article>
      ))}
    </div>
  </div>
</Section>
