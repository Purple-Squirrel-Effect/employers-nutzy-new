---
// Blog post data structure
interface BlogPost {
  id: string;
  title: string;
  excerpt: string;
  date: string;
  readTime: string;
  category: string;
  image: string;
  slug: string;
}

// Sample blog posts data
const blogPosts: BlogPost[] = [
  {
    id: "gen-z-recruitment-trends-2024",
    title: "Gen Z Recruitment Trends die je niet mag missen in 2024",
    excerpt:
      "Ontdek de nieuwste trends in Gen Z recruitment en hoe visuele content de manier waarop we talent aantrekken fundamenteel verandert.",
    date: "2024-07-15",
    readTime: "5 min",
    category: "Recruitment",
    image: "/svg/Gen-Z-amico.svg",
    slug: "/blog/gen-z-recruitment-trends-2024",
  },
  {
    id: "visual-job-descriptions",
    title: "Waarom visuele vacatureteksten 4x meer conversie opleveren",
    excerpt:
      "Leer hoe visuele vacatureteksten de aandacht van Gen Z vasthoudt en waarom traditionele tekstuele vacatures niet meer werken.",
    date: "2024-07-10",
    readTime: "7 min",
    category: "Content Strategy",
    image: "/svg/Web-devices-amico.svg",
    slug: "/blog/visual-job-descriptions",
  },
  {
    id: "creator-partnerships",
    title: "Creator partnerships: De nieuwe manier van employer branding",
    excerpt:
      "Ontdek hoe partnerships met content creators je employer brand kunnen versterken en authentieke verbindingen creëren met Gen Z talent.",
    date: "2024-07-05",
    readTime: "6 min",
    category: "Employer Branding",
    image: "/svg/Content-creator-amico.svg",
    slug: "/blog/creator-partnerships",
  },
  {
    id: "nutzy-platform-success",
    title: "30.000 maandelijkse bezoekers: Het verhaal achter Nutzy's succes",
    excerpt:
      "Een kijkje achter de schermen van hoe Nutzy in korte tijd uitgroeide tot het go-to platform voor Gen Z recruitment.",
    date: "2024-06-28",
    readTime: "8 min",
    category: "Case Study",
    image: "/svg/Cohort-analysis-amico.svg",
    slug: "/blog/nutzy-platform-success",
  },
  
];

// Format date for display
function formatDate(dateString: string): string {
  const date = new Date(dateString);
  return date.toLocaleDateString("nl-NL", {
    year: "numeric",
    month: "long",
    day: "numeric",
  });
}
---

<section
  id="blog-section"
  class="bg-secondary-900 grid grid-cols-1 relative overflow-hidden py-16 md:py-24 lg:py-32 px-4 "
  data-blog-section
>
  <!-- Background Pattern -->
  <!-- <img
    class="absolute -top-32 -right-32 opacity-10 z-0"
    src="/svg/Content-creator-amico.svg"
    alt="Content creation illustration"
    loading="lazy"
  /> -->

  <!-- Content Container -->
  <div class="relative z-10 w-full max-w-7xl mx-auto">
    <!-- Section Header -->
    <div class="text-center mb-12 lg:mb-16" data-blog-header>
      <h1
        class="text-4xl md:text-6xl lg:text-8xl font-bold text-white relative z-50 mb-4 lg:mb-6"
      >
        Kennis & Inzichten
      </h1>
      <p
        class="text-lg md:text-xl text-white leading-relaxed max-w-3xl mx-auto"
      >
        Blijf op de hoogte van de nieuwste trends in Gen Z recruitment, visuele
        content strategieën en employer branding. Onze experts delen praktische
        inzichten die je direct kunt toepassen.
      </p>
    </div>

    <!-- Featured Blog Post -->
    <div class="mb-12 lg:mb-16 hidden" data-featured-post>
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-8 lg:gap-12 items-center">
        <!-- Featured Post Image -->
        <div class="order-2 lg:order-1">
          <div class="relative rounded-2xl overflow-hidden shadow-2xl group">
            <img
              src={blogPosts[0].image}
              alt={blogPosts[0].title}
              class="w-full h-64 md:h-80 lg:h-96 object-cover transition-transform duration-500 group-hover:scale-105"
              loading="lazy"
            />
            <div
              class="absolute inset-0 bg-gradient-to-t from-black/60 via-transparent to-transparent"
            >
            </div>
            <div class="absolute bottom-4 left-4 right-4">
              <span
                class="inline-block px-3 py-1 bg-primary-500 text-white text-sm font-semibold rounded-full mb-2"
              >
                {blogPosts[0].category}
              </span>
            </div>
          </div>
        </div>

        <!-- Featured Post Content -->
        <div class="order-1 lg:order-2">
          <div class="space-y-4">
            <div class="flex items-center gap-4 text-secondary-300 text-sm">
              <time datetime={blogPosts[0].date}>
                {formatDate(blogPosts[0].date)}
              </time>
              <span>•</span>
              <span>{blogPosts[0].readTime} leestijd</span>
            </div>

            <h2
              class="text-3xl md:text-4xl lg:text-5xl font-bold text-white leading-tight"
            >
              {blogPosts[0].title}
            </h2>

            <p class="text-lg text-white/90 leading-relaxed">
              {blogPosts[0].excerpt}
            </p>

            <a
              href={blogPosts[0].slug}
              class="inline-flex items-center gap-2 px-6 py-3 bg-primary-500 hover:bg-primary-600 text-white font-semibold rounded-lg transition-all duration-300 hover:scale-105 hover:shadow-lg group"
            >
              Lees meer
              <svg
                class="w-4 h-4 transition-transform duration-300 group-hover:translate-x-1"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M9 5l7 7-7 7"></path>
              </svg>
            </a>
          </div>
        </div>
      </div>
    </div>

    <!-- Blog Posts Grid -->
    <div class="grid  grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 lg:gap-8" data-blog-grid>
      {blogPosts.slice(1).map((post, index) => (
        <article
          class="blog-card bg-primary-800 rounded-2xl overflow-hidden shadow-xl hover:shadow-2xl transition-all duration-300 hover:scale-105 group"
          data-blog-card
          data-index={index}
        >
          <!-- Post Image -->
          <div class="relative h-48 overflow-hidden">
            <img
              src={post.image}
              alt={post.title}
              class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-110"
              loading="lazy"
            />
            <div class="absolute inset-0 bg-gradient-to-t from-black/40 via-transparent to-transparent"></div>
            <div class="absolute top-4 left-4">
              <span class="inline-block px-3 py-1 bg-primary-500 text-white text-xs font-semibold rounded-full">
                {post.category}
              </span>
            </div>
          </div>

          <!-- Post Content -->
          <div class="p-6">
            <!-- Meta Information -->
            <div class="flex items-center gap-3 text-secondary-300 text-xs mb-3">
              <time datetime={post.date}>
                {formatDate(post.date)}
              </time>
              <span>•</span>
              <span>{post.readTime} leestijd</span>
            </div>

            <!-- Title -->
            <h3 class="text-xl font-bold text-white mb-3 leading-tight group-hover:text-secondary-300 transition-colors duration-300">
              {post.title}
            </h3>

            <!-- Excerpt -->
            <p class="text-white/80 text-sm leading-relaxed mb-4 line-clamp-3">
              {post.excerpt}
            </p>

            <!-- Read More Link -->
            <a
              href={post.slug}
              class="inline-flex items-center gap-2 text-primary-300 hover:text-primary-200 font-semibold text-sm transition-colors duration-300 group"
            >
              Lees meer
              <svg class="w-3 h-3 transition-transform duration-300 group-hover:translate-x-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
              </svg>
            </a>
          </div>
        </article>
      ))}
    </div>

    <!-- Call to Action -->
    <div class="text-center mt-12 lg:mt-16" data-blog-cta>
      <div class="bg-primary-800 rounded-2xl p-8 lg:p-12 border border-primary-700">
        <h3 class="text-2xl md:text-3xl font-bold text-white mb-4">
          Wil je meer weten over Gen Z recruitment?
        </h3>
        <p class="text-white/90 mb-6 max-w-2xl mx-auto">
          Ontvang onze nieuwsbrief met de nieuwste inzichten, trends en praktische tips voor het aantrekken van Gen Z talent.
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center items-center max-w-md mx-auto">
          <input
            type="email"
            placeholder="Jouw e-mailadres"
            class="flex-1 px-4 py-3 rounded-lg bg-white text-gray-900 placeholder-gray-500 focus:outline-none focus:ring-2 focus:ring-primary-500"
          />
          <button
            type="submit"
            class="px-6 py-3 bg-primary-500 hover:bg-primary-600 text-white font-semibold rounded-lg transition-all duration-300 hover:scale-105 hover:shadow-lg whitespace-nowrap"
          >
            Aanmelden
          </button>
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  /* Line clamp utility for text truncation */
  .line-clamp-3 {
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  /* Enhanced focus states for accessibility */
  .blog-card:focus-within {
    outline: 2px solid #412683;
    outline-offset: 2px;
  }

  /* Smooth transitions for all interactive elements */
  .blog-card a:focus {
    outline: 2px solid #412683;
    outline-offset: 2px;
    border-radius: 4px;
  }
</style>


