---
// GenZWorkplaceSection.astro - Version 2
// Modern card-based layout with central focus and dynamic visual hierarchy
// Emphasizes the journey from understanding to action

import Section from "../Section.astro";
import SectionDescription from "../SectionDescription.astro";
import SectionTitle from "../SectionTitle.astro";

export interface Props {
  id?: string;
  className?: string;
}

const { id = "gen-z-workplace", className = "" } = Astro.props;

// Restructured content for better visual flow
const workplaceValues = [
  {
    phase: "Begrijpen",
    icon: "/svg/steps_24dp_1F1F1F_FILL0_wght400_GRAD0_opsz24.svg",
    title: "Wat gen Z spannend vindt",
    content: "Hun eerste stappen in het werkende leven, het ontdekken van hun talenten en het vinden van hun plek in een nieuwe omgeving."
  },
  {
    phase: "Ondersteunen",
    icon: "/svg/handshake_24dp_1F1F1F_FILL0_wght400_GRAD0_opsz24.svg",
    title: "Zelfvertrouwen voeden",
    content: "Open communicatie, realistische verwachtingen en een werkomgeving waar fouten maken mag – omdat het hoort bij groeien."
  },
  {
    phase: "Realiseren",
    icon: "/svg/star_shine_24dp_1F1F1F_FILL0_wght400_GRAD0_opsz24.svg",
    title: "Zichtbaar maken",
    content: "Met visuele verhalen, eerlijke content en echte ervaringen van collega's laten we zien: 'Hier mag je leren, groeien en jezelf zijn.'"
  }
];
---

<Section
  id={id}
  sectionClassName="bg-primary-200 overflow-hidden"
  className={`relative py-20 md:py-28 lg:py-36 ${className}`}
>
  <!-- Decorative Background Elements -->
  <div class="absolute top-0 right-0 w-96 h-96 opacity-10 transform rotate-12">
    <img
      src="/svg/Team-spirit-amico.svg"
      alt="Background decoration"
      class="w-full h-full object-contain"
      loading="lazy"
    />
  </div>

  <div class="absolute bottom-0 left-0 w-80 h-80 opacity-5 transform -rotate-12">
    <img
      src="/svg/Mentoring-amico.svg"
      alt="Background decoration"
      class="w-full h-full object-contain"
      loading="lazy"
    />
  </div>

  <!-- Main Content -->
  <div class="relative z-10 space-y-16">

    <!-- Hero Section -->
    <div class="text-center ">
      <div class="inline-flex mb-8 items-center gap-3 bg-white/80 backdrop-blur-sm rounded-full px-6 py-3 border border-primary-200">
        <img src="/svg/rocket_launch_24dp_1F1F1F_FILL0_wght400_GRAD0_opsz24.svg" alt="Rocket icon" class="w-6 h-6 text-primary-500" />
        <span class="text-primary-900 font-bold">Goed Werkgeverschap</span>
      </div>

      <SectionTitle>
        Meer dan een salaris en werkplek voor
        <span class="text-secondary-500 relative">
          Gen Z
          <svg class="absolute -bottom-2 left-0 w-full h-3 text-secondary-200" viewBox="0 0 100 10" preserveAspectRatio="none">
            <path d="M0,8 Q50,0 100,8" stroke="currentColor" stroke-width="2" fill="none"/>
          </svg>
        </span>
      </SectionTitle>

      <SectionDescription>
        Het betekent dat je begrijpt wat Generatie Z spannend vindt en
        <strong class="text-primary-900">laat zien dat je er bent om hen te ondersteunen.</strong>
      </SectionDescription>
    </div>

    <!-- Three-Phase Journey -->
    <div class="grid grid-cols-1 md:grid-cols-3 gap-8 lg:gap-12">
      {workplaceValues.map((value, index) => (
        <div class="relative group grow h-full">
          <!-- Connection Line (hidden on mobile) -->
          {index < workplaceValues.length - 1 && (
            <div class="hidden md:block absolute top-16 -right-6 lg:-right-12 w-12 lg:w-24 h-0.5 bg-gradient-to-r from-primary-300 to-secondary-300 z-0"></div>
          )}

          <!-- Card -->
          <div class="relative h-full bg-white rounded-3xl p-8 shadow-lg hover:shadow-2xl transition-all duration-500 hover:-translate-y-2 border border-primary-100 group-hover:border-secondary-300">
            <!-- Phase Badge -->
            <div class="absolute -top-4 left-8 bg-primary-500 text-white px-4 py-2 rounded-full text-sm font-bold">
              {value.phase}
            </div>

            <!-- Icon -->
            <div class="mb-6 mt-4">
              <img src={value.icon} alt={`${value.phase} icon`} class="w-12 h-12 text-primary-500" />
            </div>

            <!-- Content -->
            <h3 class="text-2xl font-bold text-primary-900 mb-4 leading-tight">
              {value.title}
            </h3>
            <p class="text-gray-700 leading-relaxed text-lg">
              {value.content}
            </p>
          </div>
        </div>
      ))}
    </div>

    <!-- Central Quote & CTA -->
    <div class="max-w-5xl mx-auto">
      <div class="bg-gradient-to-r from-primary-900 via-primary-800 to-secondary-600 rounded-3xl p-8 md:p-12 text-white relative overflow-hidden">
   
        <div class="relative z-10 grid grid-cols-1 lg:grid-cols-2 gap-8 lg:gap-12 items-center">
          <!-- Quote -->
          <div class="space-y-6">
            <blockquote class="text-2xl md:text-3xl font-bold leading-tight">
              "Gen Z zoekt werkgevers die hun zelfvertrouwen voeden. Die duidelijk maken:
              <span class="text-secondary-200">'Je kunt dit, wij geloven in jou.'"</span>
            </blockquote>
            <div class="text-primary-200 font-medium">
              — Mitch
            </div>
          </div>

          <!-- Action -->
          <div class="space-y-6">
            <h3 class="text-3xl font-bold text-secondary-200">
              Het Resultaat?
            </h3>
            <p class="text-xl text-primary-100 leading-relaxed">
              Zo trek je niet alleen talent aan, maar houd je het ook vast.
              Door vanaf dag één een gevoel van veiligheid en vertrouwen te creëren.
            </p>
            <div class="flex flex-col sm:flex-row gap-4">
              <a
                href="/contact"
                class="inline-flex items-center justify-center px-8 py-4 bg-tertiary-500 text-black  font-bold rounded-xl  transition-all duration-300  shadow-lg"
              >
                Start Gesprek
              </a>
              <a
                href="/quickscan"
                class="inline-flex items-center justify-center px-8 py-4 bg-transparent border-2 border-white text-white font-bold rounded-xl hover:bg-white/20  transition-all duration-300"
              >
                Doe de Quickscan
              </a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</Section>
