            <stop offset="100%" style="stop-color:#2d2d2d;stop-opacity:1"
            ></stop>
          </linearGradient>
        </defs>

        <!-- Device body -->
        <rect
          x="0"
          y="0"
          width="300"
          height="600"
          rx="45"
          ry="45"
          fill="url(#deviceGradient)"
          stroke="#333"
          stroke-width="2"></rect>

        <!-- Screen border overlay -->
