---
export interface Props {
  className?: string;
  maxWidth?: string;
  sectionClassName?: string;
}

const {
  className = "",
  maxWidth = "max-w-7xl mx-auto  ",
  sectionClassName = "bg-primary-500",
} = Astro.props;
---

<section class={`${sectionClassName}   px-6 relative !overflow-hidden`}>
  <div class={`${maxWidth} ${className}`}>
    <slot />
  </div>
</section>
