---
// Footer component with comprehensive sitemap and company information
// Follows the existing design system patterns and responsive design principles

interface NavigationLink {
  label: string;
  href: string;
  external?: boolean;
}

interface NavigationSection {
  title: string;
  links: NavigationLink[];
}

interface SocialLink {
  name: string;
  href: string;
  icon: string;
  ariaLabel: string;
}

// Navigation sections organized logically
const navigationSections: NavigationSection[] = [
  {
    title: "Platform",
    links: [
      { label: "Home", href: "/" },
      { label: "Platform", href: "/platform" },
      { label: "Visuele Vacatures", href: "/platform#visual-jobs" },
      { label: "Creator Network", href: "/platform#creators" }
    ]
  },
  {
    title: "Services",
    links: [
      { label: "Content Creatie & Campagnes", href: "/campain-strategy" },
      { label: "Recruitment Strategie", href: "/campain-strategy#strategy" },
      { label: "Creator Partnerships", href: "/campain-strategy#partnerships" },
      { label: "Campagne Uitvoering", href: "/campain-strategy#execution" }
    ]
  },
  {
    title: "Kennis & Support",
    links: [
      { label: "Kennis delen", href: "/blog" },
      { label: "Gen-Z Insights", href: "/blog#insights" },
      { label: "Recruitment Trends", href: "/blog#trends" },
      { label: "Best Practices", href: "/blog#best-practices" }
    ]
  },
  {
    title: "Bedrijf",
    links: [
      { label: "Over ons", href: "/about" },
      { label: "Ons Team", href: "/about#team" },
      { label: "Missie & Visie", href: "/about#mission" },
      { label: "Contact", href: "/contact" }
    ]
  }
];

// Social media links
const socialLinks: SocialLink[] = [
  {
    name: "LinkedIn",
    href: "https://linkedin.com/company/nutzy",
    icon: "linkedin",
    ariaLabel: "Volg Nutzy op LinkedIn"
  },
  {
    name: "Instagram",
    href: "https://instagram.com/nutzy_nl",
    icon: "instagram", 
    ariaLabel: "Volg Nutzy op Instagram"
  },
  {
    name: "TikTok",
    href: "https://tiktok.com/@nutzy_nl",
    icon: "tiktok",
    ariaLabel: "Volg Nutzy op TikTok"
  },
  {
    name: "Twitter",
    href: "https://twitter.com/nutzy_nl",
    icon: "twitter",
    ariaLabel: "Volg Nutzy op Twitter"
  }
];

// Company information
const companyInfo = {
  name: "Nutzy",
  description: "Gen-Z Recruitment Platform voor visuele vacatures en creator partnerships",
  email: "hello@nutzy.nl",
  phone: "+31 (0)20 123 4567",
  address: "Amsterdam, Nederland",
  kvk: "12345678",
  btw: "NL123456789B01"
};

// Get current year for copyright
const currentYear = new Date().getFullYear();
---

<footer class="bg-white border-t border-gray-200" role="contentinfo" aria-label="Site footer">
  <div class="px-8 md:px-16 lg:px-32 py-16 max-w-7xl mx-auto">
    <!-- Main Footer Content -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-6 gap-12 lg:gap-8 mb-12">
      
      <!-- Company Info Section -->
      <div class="lg:col-span-2 space-y-6">
        <!-- Logo -->
        <div class="flex items-center gap-3">
          <svg
            class="h-10"
            viewBox="0 0 1123 467"
            fill="none"
            xmlns="http://www.w3.org/2000/svg"
            aria-label="Nutzy Logo"
          >
            <path
              d="M1123 233.5C1123 362.236 1018.74 466.5 890 466.5C761.264 466.5 657 362.236 657 233.5C657 104.764 761.264 0.5 890 0.5C1018.74 0.5 1123 104.764 1123 233.5Z"
              fill="#25b4b3"></path>
            <path
              d="M516.3 155.344V304.665H511.808L428.508 221.753V302.279H396.045V152.759H400.741L483.633 235.473V155.344H516.3Z"
              fill="#581c87"></path>
          </svg>
        </div>

        <!-- Company Description -->
        <p class="text-gray-700 leading-relaxed max-w-sm">
          {companyInfo.description}. Transformeer jouw recruitment aanpak en bereik Gen-Z talent op een authentieke manier.
        </p>

        <!-- Contact Information -->
        <div class="space-y-3">
          <div class="flex items-center gap-3">
            <div class="w-5 h-5 text-primary-900 flex-shrink-0">
              <svg fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 4.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
              </svg>
            </div>
            <a 
              href={`mailto:${companyInfo.email}`}
              class="text-gray-700 hover:text-primary-900 transition-colors duration-200"
            >
              {companyInfo.email}
            </a>
          </div>
          
          <div class="flex items-center gap-3">
            <div class="w-5 h-5 text-primary-900 flex-shrink-0">
              <svg fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
              </svg>
            </div>
            <a 
              href={`tel:${companyInfo.phone.replace(/\s/g, '')}`}
              class="text-gray-700 hover:text-primary-900 transition-colors duration-200"
            >
              {companyInfo.phone}
            </a>
          </div>
          
          <div class="flex items-center gap-3">
            <div class="w-5 h-5 text-primary-900 flex-shrink-0">
              <svg fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
              </svg>
            </div>
            <span class="text-gray-700">{companyInfo.address}</span>
          </div>
        </div>

        <!-- Social Media Links -->
        <div class="space-y-4">
          <h3 class="text-lg font-semibold text-gray-900">Volg ons</h3>
          <div class="flex gap-4">
            {socialLinks.map((social) => (
              <a
                href={social.href}
                target="_blank"
                rel="noopener noreferrer"
                class="w-10 h-10 bg-gray-100 hover:bg-primary-900 rounded-lg flex items-center justify-center transition-all duration-300 group"
                aria-label={social.ariaLabel}
              >
                {social.icon === 'linkedin' && (
                  <svg class="w-5 h-5 text-gray-600 group-hover:text-white transition-colors duration-300" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                    <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
                  </svg>
                )}
                {social.icon === 'instagram' && (
                  <svg class="w-5 h-5 text-gray-600 group-hover:text-white transition-colors duration-300" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                    <path d="M12.017 0C8.396 0 7.989.016 6.756.072 5.526.127 4.718.302 4.019.57c-.72.28-1.33.653-1.938 1.26C1.474 2.438 1.101 3.048.821 3.767c-.268.7-.443 1.507-.498 2.738C.266 7.738.25 8.145.25 11.766s.016 4.028.072 5.261c.055 1.231.23 2.038.498 2.738.28.72.653 1.33 1.26 1.938.607.607 1.217.98 1.938 1.26.7.268 1.507.443 2.738.498 1.233.056 1.64.072 5.261.072s4.028-.016 5.261-.072c1.231-.055 2.038-.23 2.738-.498.72-.28 1.33-.653 1.938-1.26.607-.607.98-1.217 1.26-1.938.268-.7.443-1.507.498-2.738.056-1.233.072-1.64.072-5.261s-.016-4.028-.072-5.261c-.055-1.231-.23-2.038-.498-2.738-.28-.72-.653-1.33-1.26-1.938C19.562 1.474 18.952 1.101 18.233.821c-.7-.268-1.507-.443-2.738-.498C14.262.266 13.855.25 12.017.25zm0 2.17c3.556 0 3.978.015 5.38.072 1.299.059 2.006.277 2.476.461.622.242 1.066.532 1.532.998.466.466.756.91.998 1.532.184.47.402 1.177.461 2.476.057 1.402.072 1.824.072 5.38s-.015 3.978-.072 5.38c-.059 1.299-.277 2.006-.461 2.476-.242.622-.532 1.066-.998 1.532-.466.466-.91.756-1.532.998-.47.184-1.177.402-2.476.461-1.402.057-1.824.072-5.38.072s-3.978-.015-5.38-.072c-1.299-.059-2.006-.277-2.476-.461-.622-.242-1.066-.532-1.532-.998-.466-.466-.756-.91-.998-1.532-.184-.47-.402-1.177-.461-2.476C2.185 15.995 2.17 15.573 2.17 12.017s.015-3.978.072-5.38c.059-1.299.277-2.006.461-2.476.242-.622.532-1.066.998-1.532.466-.466.91-.756 1.532-.998.47-.184 1.177-.402 2.476-.461 1.402-.057 1.824-.072 5.38-.072z"/>
                    <path d="M12.017 5.838a6.179 6.179 0 1 0 0 12.358 6.179 6.179 0 0 0 0-12.358zm0 10.188a4.009 4.009 0 1 1 0-8.018 4.009 4.009 0 0 1 0 8.018z"/>
                    <circle cx="18.406" cy="5.594" r="1.44"/>
                  </svg>
                )}
                {social.icon === 'tiktok' && (
                  <svg class="w-5 h-5 text-gray-600 group-hover:text-white transition-colors duration-300" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                    <path d="M19.59 6.69a4.83 4.83 0 0 1-3.77-4.25V2h-3.45v13.67a2.89 2.89 0 0 1-5.2 1.74 2.89 2.89 0 0 1 2.31-4.64 2.93 2.93 0 0 1 .88.13V9.4a6.84 6.84 0 0 0-1-.05A6.33 6.33 0 0 0 5 20.1a6.34 6.34 0 0 0 10.86-4.43v-7a8.16 8.16 0 0 0 4.77 1.52v-3.4a4.85 4.85 0 0 1-1-.1z"/>
                  </svg>
                )}
                {social.icon === 'twitter' && (
                  <svg class="w-5 h-5 text-gray-600 group-hover:text-white transition-colors duration-300" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                    <path d="M23.953 4.57a10 10 0 01-2.825.775 4.958 4.958 0 002.163-2.723c-.951.555-2.005.959-3.127 1.184a4.92 4.92 0 00-8.384 4.482C7.69 8.095 4.067 6.13 1.64 3.162a4.822 4.822 0 00-.666 2.475c0 1.71.87 3.213 2.188 4.096a4.904 4.904 0 01-2.228-.616v.06a4.923 4.923 0 003.946 4.827 4.996 4.996 0 01-2.212.085 4.936 4.936 0 004.604 3.417 9.867 9.867 0 01-6.102 2.105c-.39 0-.779-.023-1.17-.067a13.995 13.995 0 007.557 2.209c9.053 0 13.998-7.496 13.998-13.985 0-.21 0-.42-.015-.63A9.935 9.935 0 0024 4.59z"/>
                  </svg>
                )}
              </a>
            ))}
          </div>
        </div>
      </div>

      <!-- Navigation Sections -->
      {navigationSections.map((section) => (
        <nav class="space-y-4" aria-labelledby={`footer-${section.title.toLowerCase().replace(/\s+/g, '-')}-heading`}>
          <h3
            id={`footer-${section.title.toLowerCase().replace(/\s+/g, '-')}-heading`}
            class="text-lg font-semibold text-gray-900"
          >
            {section.title}
          </h3>
          <ul class="space-y-3">
            {section.links.map((link) => (
              <li>
                <a
                  href={link.href}
                  class="text-gray-700 hover:text-primary-900 transition-colors duration-200 block"
                  target={link.external ? "_blank" : undefined}
                  rel={link.external ? "noopener noreferrer" : undefined}
                >
                  {link.label}
                </a>
              </li>
            ))}
          </ul>
        </nav>
      ))}
    </div>

    <!-- Footer Bottom -->
    <div class="pt-8 border-t border-gray-200">
      <div class="flex flex-col lg:flex-row justify-between items-start lg:items-center gap-6">

        <!-- Copyright and Legal -->
        <div class="flex flex-col sm:flex-row gap-4 sm:gap-8 text-sm text-gray-600">
          <p>Â© {currentYear} {companyInfo.name}. Alle rechten voorbehouden.</p>
          <div class="flex gap-4">
            <a href="/privacy" class="hover:text-primary-900 transition-colors duration-200">
              Privacybeleid
            </a>
            <a href="/terms" class="hover:text-primary-900 transition-colors duration-200">
              Algemene Voorwaarden
            </a>
            <a href="/cookies" class="hover:text-primary-900 transition-colors duration-200">
              Cookiebeleid
            </a>
          </div>
        </div>

        <!-- Company Registration -->
        <div class="text-sm text-gray-600 space-y-1">
          <p>KvK: {companyInfo.kvk}</p>
          <p>BTW: {companyInfo.btw}</p>
        </div>
      </div>
    </div>
  </div>
</footer>

<style>
  /* Ensure footer doesn't interfere with existing animations */
  footer {
    position: relative;
    z-index: 10;
  }

  /* Enhanced focus states for accessibility */
  footer a:focus {
    outline: 2px solid var(--color-primary-900);
    outline-offset: 2px;
    border-radius: 4px;
  }

  /* Smooth transitions for all interactive elements */
  footer a,
  footer button {
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  }
</style>
