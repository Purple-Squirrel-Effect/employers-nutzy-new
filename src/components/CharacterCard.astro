---
export interface Props {
  name: string;
  description: string;
  avatarSrc?: string;
  avatarAlt?: string;
  className?: string;
}

const {
  name,
  description,
  avatarSrc = "/img/placeholder-avatar.svg",
  avatarAlt = "Character avatar",
  className = "",
} = Astro.props;
---

<div
  class={`character-card bg-white rounded-2xl shadow-lg overflow-hidden ${className}`}
>
  <!-- Avatar Section -->
  <div class="flex justify-center pt-6 pb-4">
    <div
      class="w-20 h-20 md:w-24 md:h-24 lg:w-28 lg:h-28 rounded-full overflow-hidden border-4 border-gray-200"
    >
      <img
        src={avatarSrc}
        alt={avatarAlt}
        class="w-full h-full object-cover"
        loading="lazy"
      />
    </div>
  </div>

  <!-- Description Area -->
  <div class="px-6 pb-6">
    <!-- Character Name -->
    <h3 class="text-lg md:text-xl font-bold text-gray-900 text-center mb-3">
      {name}
    </h3>

    <!-- Character Description -->
    <p
      class="text-sm md:text-base text-gray-600 text-center leading-relaxed line-clamp-3"
    >
      {description}
    </p>
  </div>
</div>

<style>
  .character-card {
    position: relative;
    max-width: 320px;
  }

  /* Responsive adjustments */
  @media (max-width: 768px) {
    .character-card {
      max-width: 280px;
    }
  }
</style>
