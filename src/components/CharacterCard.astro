---
import CardDescription from "./CardDescription.astro";
import CardTitle from "./CardTitle.astro";

export interface Props {
  name: string;
  description: string;
  id?: string;
  avatarSrc?: string;
  avatarAlt?: string;
  className?: string;
}

const {
  name,
  description,
  id,
  avatarSrc = "/img/placeholder-avatar.svg",
  avatarAlt = "Character avatar",
  className = "",
} = Astro.props;
---

<div
  {id}
  class={` bg-white rounded-2xl shadow-lg overflow-hidden ${className}`}
>
  <!-- Avatar Section -->
  <div class="flex justify-center pt-6 pb-4">
    <div
      class="w-20 h-20 md:w-24 md:h-24 lg:w-28 lg:h-28 rounded-full overflow-hidden border-4 border-gray-200"
    >
      <img
        src={avatarSrc}
        alt={avatarAlt}
        class="w-full h-full object-cover"
        loading="lazy"
      />
    </div>
  </div>

  <!-- Description Area -->
  <div class="px-6 pb-6">
    <!-- Character Name -->
    <CardTitle>
      {name}
    </CardTitle>

    <!-- Character Description -->
    <CardDescription>
      {description}
    </CardDescription>
  </div>
</div>
