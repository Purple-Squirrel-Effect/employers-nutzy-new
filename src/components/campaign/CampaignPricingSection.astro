<script>
  import { gsap } from "gsap";
  import { ScrollTrigger } from "gsap/ScrollTrigger";

  gsap.registerPlugin(ScrollTrigger);

  document.addEventListener("DOMContentLoaded", () => {
    // Check for reduced motion preference
    const prefersReducedMotion = window.matchMedia("(prefers-reduced-motion: reduce)").matches;
    
    if (!prefersReducedMotion) {
      // Pricing section animation
      const pricingSection = document.querySelector("section");
      const pricingTitle = pricingSection?.querySelector("h2");
      const pricingText = pricingSection?.querySelector("p");
      const pricingCards = pricingSection?.querySelectorAll(".grid > div");
      
      if (pricingSection && pricingTitle && pricingText && pricingCards) {
        gsap.set([pricingTitle, pricingText, pricingCards], { opacity: 0, y: 50 });
        
        ScrollTrigger.create({
          trigger: pricingSection,
          start: "top 80%",
          onEnter: () => {
            const tl = gsap.timeline({ defaults: { ease: "power3.out" } });
            
            tl.to(pricingTitle, { opacity: 1, y: 0, duration: 0.8 })
              .to(pricingText, { opacity: 1, y: 0, duration: 0.6 }, "-=0.4")
              .to(pricingCards, { opacity: 1, y: 0, duration: 0.8, stagger: 0.2 }, "-=0.4");
          }
        });
      }
    }
  });
</script>
