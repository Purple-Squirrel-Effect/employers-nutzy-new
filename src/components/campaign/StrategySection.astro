<script>
  import { gsap } from "gsap";
  import { ScrollTrigger } from "gsap/ScrollTrigger";

  gsap.registerPlugin(ScrollTrigger);

  document.addEventListener("DOMContentLoaded", () => {
    // Check for reduced motion preference
    const prefersReducedMotion = window.matchMedia("(prefers-reduced-motion: reduce)").matches;
    
    if (!prefersReducedMotion) {
      // Strategy section animation
      const strategySection = document.querySelector("#strategy");
      const strategyTitle = strategySection?.querySelector("h2");
      const strategyText = strategySection?.querySelector("p");
      const strategySteps = strategySection?.querySelectorAll(".space-y-6 > div");
      const strategyImage = strategySection?.querySelector("img");
      
      if (strategySection && strategyTitle && strategyText && strategySteps && strategyImage) {
        gsap.set([strategyTitle, strategyText, strategySteps, strategyImage], { opacity: 0, y: 50 });
        
        ScrollTrigger.create({
          trigger: strategySection,
          start: "top 80%",
          onEnter: () => {
            const tl = gsap.timeline({ defaults: { ease: "power3.out" } });
            
            tl.to(strategyTitle, { opacity: 1, y: 0, duration: 0.8 })
              .to(strategyText, { opacity: 1, y: 0, duration: 0.6 }, "-=0.4")
              .to(strategySteps, { opacity: 1, y: 0, duration: 0.6, stagger: 0.2 }, "-=0.4")
              .to(strategyImage, { opacity: 1, y: 0, duration: 0.8 }, "-=0.6");
          }
        });
      }
    }
  });
</script>
